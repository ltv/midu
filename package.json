{
  "name": "midu",
  "version": "0.1.0",
  "description": "Midu (/mɪdʊ/) - Full-stack Javascript with Microservices, VueJS, MongoDB, TypeScript",
  "main": "dist/services",
  "repository": "git@github.com:ltv/midu.git",
  "author": "Luc <luc@ltv.vn>, Anh <lehoanganh25991@gmail.com>",
  "license": "MIT",
  "scripts": {
    "precommit": "lint-staged",
    "prepare": "echo 'Please run: source .midurc'",
    "format": "lint-staged",
    "dev": "moleculer-runner --repl --hot --env",
    "start": "moleculer-runner --env --instances 4 src",
    "test": "jest --verbose",
    "jest": "jest"
  },
  "jest": {
    "rootDir": "./",
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "test-cases.js$",
      "__tests__/manual/.*.js$",
      "__tests__/.*.mock.js$",
      "(/)?dist/.*.js$"
    ]
  },
  "lint-staged": {
    "*.js": [
      "prettier --write --single-quote --trailing-comma:all --print-width 120",
      "eslint --fix",
      "git add"
    ]
  },
  "dependencies": {
    "bcrypt-nodejs": "^0.0.3",
    "bluebird": "^3.5.1",
    "dotenv": "^6.0.0",
    "jest": "^23.4.1",
    "jsonwebtoken": "^8.3.0",
    "moleculer": "^0.13.1",
    "moleculer-db": "^0.7.5",
    "moleculer-decorators": "^1.0.14",
    "moleculer-web": "^0.8.0",
    "moment": "^2.22.2",
    "mongoose": "^5.2.4",
    "mongoose-timestamps-moment": "^1.0.0",
    "ts-jest": "^23.0.1",
    "url-join": "^4.0.0"
  },
  "devDependencies": {
    "husky": "^0.14.3",
    "lint-staged": "^4.0.0",
    "moleculer-repl": "^0.5.0",
    "prettier": "^1.4.4"
  }
}
