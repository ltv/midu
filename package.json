{
  "name": "midu",
  "version": "0.1.0",
  "description": "Midu (/mɪdʊ/) - Full-stack Javascript with Microservices, VueJS, MongoDB, TypeScript",
  "main": "dist/services",
  "repository": "git@github.com:ltv/midu.git",
  "author": "Luc <luc@ltv.vn>, Anh <lehoanganh25991@gmail.com>",
  "license": "MIT",
  "scripts": {
    "precommit": "lint-staged",
    "format": "lint-staged",
    "dev": "moleculer-runner --repl --hot src/services",
    "start": "moleculer-runner",
    "ci": "jest --watch",
    "test": "jest --coverage",
    "lint": "eslint src/services"
  },
  "jest": {
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "rootDir": "./services",
    "roots": [
      "../test"
    ]
  },
  "lint-staged": {
    "*.js": [
      "prettier --write --single-quote --print-width 120",
      "eslint --fix",
      "git add"
    ]
  },
  "dependencies": {
    "jest": "^23.4.1",
    "moleculer": "^0.13.1",
    "moleculer-decorators": "^1.0.14",
    "moleculer-web": "^0.8.0",
    "ts-jest": "^23.0.1"
  },
  "devDependencies": {
    "moleculer-repl": "^0.5.0",    "husky": "^0.14.3",
    "lint-staged": "^4.0.0",
    "prettier": "^1.4.4"
  }
}


