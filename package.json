{
  "name": "midu",
  "version": "0.1.0",
  "description": "Midu (/mɪdʊ/) - Full-stack Javascript with Microservices, VueJS, MongoDB, TypeScript",
  "main": "dist/services",
  "repository": "git@github.com:ltv/midu.git",
  "author": "Luc <luc@ltv.vn>, Anh <lehoanganh25991@gmail.com>",
  "license": "MIT", 
  "scripts": {
    "precommit": "lint-staged",
    "format": "lint-staged",
    "build-css": "node-sass-chokidar --include-path ./src --include-path ./node_modules src/ -o src/",
    "watch-css": "npm run build-css && node-sass-chokidar --include-path ./src --include-path ./node_modules src/ -o src/ --watch --recursive",
    "start-js": "react-scripts start",
    "start": "NODE_PATH=./src npm-run-all -p watch-css start-js",
    "build": "npm run build-css && react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write --single-quote --trailing-comma=all --print-width 120",
      "eslint --fix",
      "git add"
    ]
  },
  "dependencies": {
    "react": "^16.4.1",
    "react-dom": "^16.4.1",
    "react-router-dom": "^4.3.1",
    "react-scripts": "1.1.4",
    "redux-box": "^1.6.1",
    "redux-devtools-extension": "^2.13.5",
    "redux-pack": "^0.1.5",
    "redux-thunk": "^2.3.0",
    "bootstrap": "3.3.7",
    "chartist": "0.10.1",
    "history": "4.7.2",
    "moment": "2.21.0",
    "node-sass": "4.6.1",
    "node-sass-chokidar": "0.0.3",
    "nouislider": "11.0.3",
    "npm-run-all": "4.1.2",
    "perfect-scrollbar": "1.3.0",
    "react-big-calendar": "0.19.0",
    "react-bootstrap": "0.32.1",
    "react-bootstrap-sweetalert": "4.2.3",
    "react-bootstrap-switch": "15.5.3",
    "react-chartist": "0.13.1",
    "react-datetime": "2.14.0",
    "react-google-maps": "9.4.5",
    "react-jvectormap": "0.0.2",
    "react-notification-system": "0.2.17",
    "react-select": "1.2.1",
    "react-stepzilla": "4.7.0",
    "react-syntax-highlighter": "7.0.2",
    "react-table": "6.8.0",
    "react-tagsinput": "3.19.0",
    "wnumb": "1.1.0"
  },
  "devDependencies": {
    "husky": "^0.14.3",
    "lint-staged": "^7.2.0",
    "moleculer-repl": "^0.5.0",
    "nodemon": "^1.18.3",
    "prettier": "^1.13.7",
    "ts-node": "^7.0.0",
    "tslint": "^5.11.0",
    "typescript": "^2.9.2"
  }
}
